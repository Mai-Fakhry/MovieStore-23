<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="550.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movie.HelloController">
   <children>
      <AnchorPane prefHeight="550.0" prefWidth="400.0">
         <children>
            <!-- Login Section -->
            <AnchorPane>
               <children>
                  <!-- Movie Store Label -->
                  <Label layoutX="90.0" layoutY="146.0" prefHeight="53.0" prefWidth="245.0" text="Movie Store">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>

                  <!-- Register Button -->
                  <Button fx:id="newAcc" layoutX="84.0" layoutY="207.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #B72727;" text="Create An Account" textFill="WHITE" />

                  <!-- Already Have Account Button (hidden by default) -->
                  <Button fx:id="HaveAcc" layoutX="59.0" layoutY="304.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0" text="Already have an account" textFill="#1f1fd0" visible="false" />
      
                        <!-- Login Button -->
                  <Button fx:id="log" layoutX="84.0" layoutY="276.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #B72727;" text="Already Have An Account" textFill="WHITE" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</StackPane>
