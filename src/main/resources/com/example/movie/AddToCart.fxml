<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movie.AddToCart">
    <children>
        <!-- Title text for Add Movie to Cart -->
        <Text layoutX="322.0" layoutY="152.0" scaleX="2.0" scaleY="2.0" scaleZ="2.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Movie to Cart">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Text>

        <!-- TextField to enter the name of the movie -->
        <TextField fx:id="movieNameField" layoutX="302.0" layoutY="208.0" prefHeight="25.0" prefWidth="196.0" promptText="Movie name" />

        <!-- Return Button, add action for returning to the previous page -->
        <Button layoutX="434.0" layoutY="312.0" mnemonicParsing="false" style="-fx-background-color: #B72727;" text="Return" textFill="WHITE" onAction="#handleReturnButtonAction"/>

        <!-- Button to view the cart, it should call handleViewCart -->
        <Button fx:id="viewCartButton" layoutX="292.0" layoutY="312.0" mnemonicParsing="false" style="-fx-background-color: #B72727;" text="View Your Cart" textFill="WHITE" onAction="#handleViewCart"/>

        <!-- Button to add the movie to the cart -->
        <Button fx:id="addButton" layoutX="365.0" layoutY="259.0" mnemonicParsing="false" onAction="#handleAddToCart" prefHeight="25.0" prefWidth="69.0" style="-fx-background-color: #B72727;" text="Add" textFill="WHITE" />
    </children>
</AnchorPane>
